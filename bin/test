#!/usr/bin/env bash
# -*- bash -*-
#
#!/usr/bin/env node
# -*- js   -*-
#
#!/usr/bin/env lua
# -*- js   -*-
#
set -u -e -o pipefail

echo -e "\n\n================================="
luarocks make > /dev/null 2>/tmp/l.r.err || cat /tmp/l.r.err

eval $(luarocks path)
if [[ -z "$@" ]]
then
  for file in tests/*.lua
  do
    echo -e -n "FILE: \e[1;38m$file\e[0m "
    busted $file
  done
else
  busted "$@"
fi


